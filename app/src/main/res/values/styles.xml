<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ────────────────────────────────────── 일반 텍스트 ────────────────────────────────────── -->
    <!--                                  텍스트 컬러 검정색 고정                                    -->

    <!-- 제목 텍스트 -->
    <style name="StyleTitle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nanumsquare_eb</item>
        <item name="fontFamily">@font/nanumsquare_eb</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/margin_component</item>
    </style>

    <!-- 헤더 텍스트 -->
    <style name="StyleHeader">

        <item name="android:textColor">@color/black</item>

    </style>

    <!-- 숫자 텍스트 -->
    <!-- 오늘 날짜만 Attribute에서 textStyle="bold" 지정하기/ 나머지 숫자는 모두 regular -->
    <style name="StyleNumber">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gmarketsans_m</item>
        <item name="fontFamily">@font/gmarketsans_m</item>

        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/margin_component</item>

    </style>

    <!-- ────────────────────────────────────── 기본 컴포넌트 ────────────────────────────────────── -->

    <!-- 큰 버튼 : 파란색 -->
    <style name="StyleButtonBlue">
        <item name="android:background">@drawable/common_button_skyblue</item>
        <item name="android:padding">@dimen/padding_button_big</item>
        <item name="android:layout_margin">@dimen/margin_component</item>

        <item name="fontFamily">@font/nanumsquare_b</item>
        <item name="android:fontFamily">@font/nanumsquare_b</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 큰 버튼 : 흰색 -->
    <style name="StyleButtonWhite">
        <item name="android:background">@drawable/common_button_white</item>
        <item name="android:padding">@dimen/padding_button_big</item>
        <item name="android:layout_margin">@dimen/margin_component</item>

        <item name="fontFamily">@font/nanumsquare_b</item>
        <item name="android:fontFamily">@font/nanumsquare_b</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/primary_blue</item>
    </style>

    <!-- 작은 버튼 : 파란색 -->
    <style name="StyleButtonBlueSmaller">
        <item name="android:background">@drawable/common_button_skyblue</item>
        <item name="android:padding">@dimen/padding_button_small</item>
        <item name="android:layout_margin">@dimen/margin_component</item>

        <item name="fontFamily">@font/nanumsquare_b</item>
        <item name="android:fontFamily">@font/nanumsquare_b</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 작은 버튼 : 흰색 -->
    <style name="StyleButtonWhiteSmaller">
        <item name="android:background">@drawable/common_button_white</item>
        <item name="android:padding">@dimen/padding_button_small</item>
        <item name="android:layout_margin">@dimen/margin_component</item>

        <item name="fontFamily">@font/nanumsquare_b</item>
        <item name="android:fontFamily">@font/nanumsquare_b</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">@color/primary_blue</item>
    </style>

    <!-- ────────────────────────────────────── 그 밖의 뷰 ────────────────────────────────────── -->
    <!-- 팝업 -->
    <style name="StylePopup">

    </style>

    <!-- 활동리스트 -->
    <style name="StyleList">
        <!-- radius 32dp -->
    </style>

</resources>