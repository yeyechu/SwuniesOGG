<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ────────────────────────────────────── 일반 텍스트 ────────────────────────────────────── -->
    <!--                                  텍스트 컬러 검정색 고정                                    -->

    <style name="StyleText">
        <item name="android:textSize">@dimen/text_size_body_big</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nanumsquare_r</item>
        <item name="fontFamily">@font/nanumsquare_r</item>
        <item name="android:padding">@dimen/padding_small</item>


    </style>
    <!-- 제목 텍스트 -->
    <style name="StyleText.title" parent="StyleText">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">@font/nanumsquare_eb</item>
        <item name="fontFamily">@font/nanumsquare_eb</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="StyleText.subtitle" parent="StyleText">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:fontFamily">@font/nanumsquare_b</item>
        <item name="fontFamily">@font/nanumsquare_b</item>
    </style>

    <!-- 헤더 텍스트 -->
    <style name="StyleText.header" parent="StyleText">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">@font/nanumsquare_b</item>
        <item name="fontFamily">@font/nanumsquare_b</item>


    </style>


    <!-- 숫자 텍스트 -->
    <!-- 오늘 날짜만 Attribute에서 textStyle="bold" 지정하기/ 나머지 숫자는 모두 regular -->
    <style name="StyleText.title.number" parent="StyleText.title">
        <item name="android:fontFamily">@font/gmarketsans_m</item>
        <item name="fontFamily">@font/gmarketsans_m</item>
    </style>

    <!-- 카드에 쓰이는 탄소감축 텍스트 -->
    <style name="StyleText_carbon" >
        <item name="android:textSize">@dimen/text_size_body_big</item>
        <item name="android:textColor">@color/primary_gray</item>
        <item name="android:fontFamily">@font/nanumsquare_b</item>
        <item name="fontFamily">@font/nanumsquare_b</item>
        <item name="android:layout_marginLeft">@dimen/margin_component</item>

    </style>

    <!-- 카드에 쓰이는 활동 타이틀 텍스트 -->
    <style name="StyleText.cardtitle" >
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:fontFamily">@font/nanumsquare_b</item>
        <item name="fontFamily">@font/nanumsquare_b</item>
    </style>




    <!-- ────────────────────────────────────── 기본 컴포넌트 ────────────────────────────────────── -->

    <!-- 큰 버튼 : 파란색 -->
    <style name="StyleButtonOgg">
        <item name="android:background">@drawable/common_button_skyblue</item>
        <item name="android:layout_margin">@dimen/margin_component</item>
        <item name="paddingStart">@dimen/padding_popup_big</item>
        <item name="paddingEnd">@dimen/padding_popup_big</item>

        <item name="fontFamily">@font/nanumsquare_b</item>
        <item name="android:fontFamily">@font/nanumsquare_b</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">?attr/minTouchTargetSize</item>
        <item name="android:minWidth">?attr/minTouchTargetSize</item>
    </style>

    <!-- 큰 버튼 : 흰색 -->
    <style name="StyleButtonOggWhite">
        <item name="android:background">@drawable/common_button_white</item>
        <item name="android:layout_margin">@dimen/margin_component</item>

        <item name="fontFamily">@font/nanumsquare_b</item>
        <item name="android:fontFamily">@font/nanumsquare_b</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:minHeight">?attr/minTouchTargetSize</item>
        <item name="android:minWidth">?attr/minTouchTargetSize</item>
    </style>

    <!-- 작은 버튼 : 파란색 -->
    <style name="StyleButtonOgg.smaller" parent="StyleButtonOgg">
        <item name="android:textSize">@dimen/text_size_body_big</item>
        <item name="android:paddingStart">@dimen/padding_big</item>
        <item name="android:paddingEnd">@dimen/padding_big</item>
    </style>

    <!-- 작은 버튼 : 흰색 -->
    <style name="StyleButtonOggWhite.smaller" >
        <item name="android:textSize">@dimen/text_size_body_big</item>
        <item name="android:background">@drawable/common_button_white_nonline</item>
        <item name="android:layout_margin">@dimen/margin_component</item>
        <item name="fontFamily">@font/nanumsquare_b</item>
        <item name="android:fontFamily">@font/nanumsquare_b</item>
        <item name="android:paddingStart">@dimen/padding_big</item>
        <item name="android:paddingEnd">@dimen/padding_big</item>
        <item name="android:minHeight">?attr/minTouchTargetSize</item>
        <item name="android:minWidth">?attr/minTouchTargetSize</item>

    </style>

    <style name="StyleUpButton">
        <item name="android:minWidth">?attr/minTouchTargetSize</item>
        <item name="android:minHeight">?attr/minTouchTargetSize</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/common_button_arrow_left</item>
    </style>

    <style name="StyleImageButton">
        <item name="android:minWidth">?attr/minTouchTargetSize</item>
        <item name="android:minHeight">?attr/minTouchTargetSize</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- ────────────────────────────────────── 그 밖의 뷰 ────────────────────────────────────── -->
    <!-- 카드 -->
    <style name="StyleCard">

        <item name="android:background">@drawable/common_button_white</item>
        <item name="android:padding">@dimen/padding_card_big</item>
        <item name="android:radius">@dimen/radius_card</item>
        <item name="android:layout_marginLeft">@dimen/margin_big</item>
        <item name="android:layout_marginRight">@dimen/margin_big</item>
        <item name="android:textColor">@color/black</item>


    </style>
    <!-- 팝업 -->
    <style name="Stylepopup">


    </style>

    <!-- 활동리스트 -->
    <style name="StyleList">
        <!-- radius 32dp -->
    </style>

</resources>