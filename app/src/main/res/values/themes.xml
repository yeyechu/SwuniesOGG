<resources xmlns:tools="http://schemas.android.com/tools">




    <!-- light모드(dark 모드 따로 설정 필요) -->
    <style name="Theme.SwuniesOGG" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- 메인 컬러 -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_gray</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- 보조 컬러 -->
        <item name="colorSecondary">@color/secondary_light_Blue</item>
        <item name="colorSecondaryVariant">@color/secondary_light_gray</item>
        <item name="colorOnSecondary">@color/primary_gray</item>

        <!-- 상태바 설정 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/transparency_dimmed</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <!-- 상태바 설정 -->
    <style name="Theme.SwuniesOGG.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.SwuniesOGG.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.SwuniesOGG.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 팝업창 설정 -->
    <style name="Transparent_Popup" parent="Theme.SwuniesOGG">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>