<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- default -->
    <item android:state_enabled="true">
        <layer-list>
            <!-- Bottom Layer: Gradient Background -->
            <item>
                <shape>
                    <gradient
                        android:startColor="@color/primary_blue"
                        android:endColor="@color/primary_blue"
                        android:angle="270" />
                    <corners android:radius="@dimen/radius_button" />
                </shape>
            </item>

            <!-- Middle Layer: Your Drawable -->
            <item android:drawable="@drawable/common_image_check"
            android:width="15dp"
            android:height="15dp"
            android:gravity="center"
                />

            <!-- Other Layers: Add more items as needed -->
            <!-- <item android:drawable="@drawable/another_drawable" /> -->
        </layer-list>
    </item>

    <!-- Other States: You can add more states if needed -->
    <!-- <item android:state_pressed="true"> ... </item> -->

</selector>
