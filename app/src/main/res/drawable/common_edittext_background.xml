<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <solid android:color="@color/secondary_light_gray" />
                    <corners android:radius="@dimen/radius_little" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_focused="false">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <solid android:color="@color/secondary_baby_gray" />
                    <corners android:radius="@dimen/radius_little" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>