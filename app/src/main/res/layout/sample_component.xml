<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        style="@style/StyleButtonBlue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/des_camera_button_take_photo"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        style="@style/StyleButtonWhite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/des_camera_button_take_photo"
        app:layout_constraintBottom_toTopOf="@id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_weight="1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        style="@style/StyleButtonBlueSmaller"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/des_camera_button_use_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_weight="1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button4"
        style="@style/StyleButtonWhiteSmaller"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/des_camera_button_use_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintVertical_weight="1"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView"
        style="@style/StyleNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234567890"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView2"
        style="@style/StyleNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>