<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/indicator1"
        android:layout_width="@dimen/image_size_indicator"
        android:layout_height="@dimen/image_size_indicator"
        android:src="@drawable/myact_shape_indicator_gray"
        android:layout_marginStart="@dimen/spacing_text"
        android:layout_marginEnd="@dimen/spacing_text"
        android:contentDescription="@{@string/description_indicator(1)}"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>